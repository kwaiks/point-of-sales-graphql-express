{
    "compilerOptions": {
      "baseUrl": "./src",
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es5",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "paths": {
          "@/controllers/*": ["controllers/*"],
          "@/services/*": ["services/*"],
          "@/loaders/*": ["loaders/*"],
          "@/models/*": ["models/*"],
          "@/config/*": ["config/*"],
          "@/middlewares/*": ["middlewares/*"],
          "@/utils/*": ["utils/*"],
          "@/schema/*": ["schema/*"]
      }
    },
    "lib": ["es2015"],
    "include": [
        "*.ts",
        "**/*.ts",
        "**/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./test"
    ]
}